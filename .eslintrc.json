{
  "rules": {
    "prettier/prettier": ["error"],
    "compat/compat": ["off"]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["plugin:prettier/recommended", "plugin:compat/recommended"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "ShareArrayBuffer": "readonly"
  }
}
