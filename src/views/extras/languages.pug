  .dropdown-menu.shadow(aria-labelledby='navbarDropdown')
    a.dropdown-item.d-flex.align-items-center(href='#EN')
      img.align-middle.mr-2(src="./assets/images/en.png", alt="English")
      span.align-middle.text-uppercase.fs-14.font-weight-medium ENG
    a.dropdown-item.d-flex.align-items-center(href='#KO')
      img.align-middle.mr-2(src="./assets/images/ko.png", alt="한국어")
