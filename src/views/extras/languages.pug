li.dropdown-divider.d-lg-none
li.nav-item.dropdown.ml-lg-auto
  a#navbarDropdown.nav-link.dropdown-toggle.d-flex.align-items-end(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
    img.align-middle.mr-2(src="./assets/images/en.png", alt="English")
    span.align-middle.text-uppercase.fs-14.font-weight-medium.mr-2 ENG
